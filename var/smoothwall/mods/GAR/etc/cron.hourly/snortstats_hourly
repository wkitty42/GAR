#!/bin/sh

# 1440 minutes in a day... -g is in minutes
# 1 hour
/usr/bin/logger -f /var/smoothwall/mods/GAR/var/log/snortstats.log -t cron.hourly "snortstats generating 1 hour stats"
/var/smoothwall/mods/GAR/usr/bin/thepigdoktah.pl -r /var/log/snort/snort.csv -w /var/smoothwall/mods/GAR/httpd/html/snortstats -h 01hours.html -g 60 2>> /var/smoothwall/mods/GAR/var/log/snortstats.err

